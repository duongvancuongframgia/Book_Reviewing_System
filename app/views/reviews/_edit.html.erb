<%= form_for [@review.book, @review] do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title,
      class: "form-control reset-input" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content,
      class: "form-control reset-input" %>
  </div>
  <%= button_tag type: "submit",
    class: "btn btn-default aa-review-submit" do %>
    <span><%= t "views.reviews.edit.submit_bt" %></span>
  <% end %>
<% end %>
