<div class="row profile">
  <div class="col-md-3">
    <%= render partial: "shared/user_info", locals: {user: @user} %>
  </div>
  <div class="col-md-9">
    <div class="row clearfix show_follow">
      <div class="col-md-12 column">
        <div class="tabbable" id="tabs-444468">
          <ul class="nav nav-tabs">
            <li class="active">
              <a href="#panel-list-reviews" data-toggle="tab">
                <%= t "views.users.show.list_reviews" %>
              </a>
            </li>
            <li>
              <a href="#panel-list-farorite-book" data-toggle="tab">
                <%= t "views.users.show.list_favorite" %>
              </a>
            </li>
            <li>
              <a href="#panel-list-read-book" data-toggle="tab">
                <%= t "views.users.show.list_read" %>
              </a>
            </li>
          </ul>
        </div>
        <div class="tab-content">
          <div class="tab-pane active" id="panel-list-reviews">
            <div class="row clearfix">
              <div class="col-md-12 column">
                <% @reviews.each do |review| %>
                  <%= render partial: "reviews/review", locals: {review: review} %>
                <% end %>
                <%= will_paginate @reviews %>
              </div>
            </div>
          </div>
          <div class="tab-pane" id="panel-list-farorite-book">
            <div class="row clearfix">
              <div class="col-md-12 column">
                <% @books.each do |book| %>
                  <%= render partial: "shared/list_book", locals: {book: book} %>
                <% end %>
                <%= will_paginate @reviews %>
              </div>
            </div>
          </div>
          <div class="tab-pane" id="panel-list-read-book">
            <div class="row clearfix">
              <div class="col-md-12 column">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
