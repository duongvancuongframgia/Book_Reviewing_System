<%= will_paginate @categories %>
<% @categories.each do |category| %>
  <div class="row">
    <div class="col-sm-1"></div>
    <div class="col-sm-10">
      <h4 class="well" style="color:green"><%= category.name %></h4>
      <ul>
        <%= link_to t("admin.edit"), edit_admin_category_path(category), class:"btn btn-primary" %>
        <%= link_to t("admin.delete"), [:admin, category], method: :delete,
            data: {confirm: t("admin.are_you_sure")}, class:"btn btn-danger" %>
      </ul>
    </div>
    <div class="col-sm-1"></div>
  </div>
  <hr>
<% end %>
<%= will_paginate @categories %>
