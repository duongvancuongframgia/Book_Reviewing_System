<div class="profile-sidebar">
  <div class="profile-userpic">
    <%= link_to image_tag(user.avatar, class: "media-object", size: 100), user, :class => "img-responsive" %>
  </div>
  <div class="profile-usertitle">
    <div class="profile-usertitle-name">
      <%= user.name %>
    </div>
    <div class="profile-usertitle-email">
      <%= user.email %>
    </div>
  </div>
  <%= render partial: "users/follow_form", locals: {user: user} %>
  <div class="profile-user-send-request">
    <button type="button" class="btn btn-info btn-sm">Send Request</button>
  </div>
  <%= render partial: "shared/stats", locals: {user: user} %>
</div>